{
  "name": "red-packet-dapp-webpack",
  "version": "1.0.0",
  "description": "基于以太坊的去中心化红包系统 - Webpack版本",
  "main": "src/index.js",
  "scripts": {
    "start": "webpack serve --mode development",
    "build": "webpack --mode production",
    "dev": "webpack serve --mode development --open",
    "pages:build": "npm run build",
    "pages:dev": "wrangler pages dev dist --compatibility-date=2024-01-01",
    "pages:deploy": "npm run build && wrangler pages deploy dist",
    "pages:deploy:preview": "npm run build && wrangler pages deploy dist --env=preview"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ethers": "^6.7.1",
    "web3": "^4.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@babel/preset-react": "^7.22.0",
    "babel-loader": "^9.1.0",
    "css-loader": "^6.8.0",
    "html-webpack-plugin": "^5.5.0",
    "style-loader": "^3.3.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.15.0",
    "wrangler": "^3.0.0"
  },
  "keywords": [
    "ethereum",
    "web3",
    "react",
    "dapp",
    "red-packet",
    "cloudflare-pages"
  ],
  "author": "ObjBird",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
